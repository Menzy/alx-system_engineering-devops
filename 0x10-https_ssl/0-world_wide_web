#!/bin/bash
# Script to display DNS information about subdomains

domain=$1
subdomain=$2

get_subdomain_info() {
    local sub=$1
    local full_domain="${sub}.${domain}"
    local result=$(dig +short $full_domain)

    if [ -z "$result" ]; then
        echo "The subdomain $sub does not have a DNS record."
    else
        local record_type="A"
        echo "The subdomain $sub is a $record_type record and points to $result"
    fi
}

if [ -z "$domain" ]; then
    echo "Usage: $0 domain [subdomain]"
    exit 1
fi

if [ -z "$subdomain" ]; then
    subdomains=("www" "lb-01" "web-01" "web-02")
    for sub in "${subdomains[@]}"; do
        get_subdomain_info $sub
    done
else
    get_subdomain_info $subdomain
fi
